<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Results</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <link rel="stylesheet" href="/css/style.css">
    <script src="https://kit.fontawesome.com/b180e6371d.js" crossorigin="anonymous"></script>
</head>
<body>
    <nav>
        <ul class="menu">
            <li class="logo"><a href="/">ShowMe</a></li>
            <li class="menu-item"><a href="/todos">Watchlist</a></li>
            <li class="menu-item button"><a href="/logout">Log Out</a></li>
            <li class="toggle"><a href="#"><i class="fas fa-bars"></i></a></li>
        </ul>
    </nav>
    <div class="wrapper">  
        <section class="resultSection" data-position="shows">
            <h2>Results</h2>

            <ul class="results">
                <li class="results list-header">
                    <span>Name</span>
                    <span>Genres</span>
                    <span>Summary</span>
                </li>
                <% for(var i = 0; i < data.length; i++) {%>
                    <div class="row" data-id='<%=data[i].show.id%>'>
                        <div class="col s12 m6">
                          <div class="card">
                            <div class="card-image">
                                <% if(data[i].show.image === null) {%>
                                    <img src="https://static.tvmaze.com/images/no-img/no-img-portrait-text.png" alt="">
                                <% } else{ %>  
                                    <img src="<%= data[i].show.image.original %>" alt="">
                                <% } %>
                                <form action="/todos/addToWatchList" method="post">
                                    <input type="hidden" value="<% if(data[i].show.image === null) 
                                    {%>https://static.tvmaze.com/images/no-img/no-img-portrait-text.png
                                    <% } else{ 
                                        %><%= data[i].show.image.medium %><% } %>" name="showPic">
                                    <input type="hidden" value="<%=data[i].show.summary%>" name="showSummary">
                                    <input type="hidden" value="<%=data[i].show.name%>" name="showName">
                                    <input type="hidden" value="<%=data[i].show.id%>" name="showId">
                                    <button class="btn btn-floating btn-large halfway-fab waves-effect waves-light red" type="submit" name="action">Add to Watchlist
                                        <i class="material-icons"></i>
                                    </button>
                                </form>
                              <!-- <a href="javascript: submitform()" class="btn-floating halfway-fab waves-effect waves-light red"><i class="material-icons">add</i></a> -->
                            </div>
                            <div class="card-content">
                                <span class="card-title"><%= data[i].show.name %></span>
                                <% for(var n = 0; n < data[i].show.genres.length; n++) {%>
                                    <p><%= data[i].show.genres[n] %></p>
                                <% } %>                            
                            </div>
                          </div>
                        </div>
                      </div> 
                      <% } %>

            </ul>
        </section>
    </div>
    
    <script src="/js/main.js"></script>
</body>
</html>